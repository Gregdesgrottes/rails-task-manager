<h1>Tasks#index</h1>



<% @tasks.each do |task| %>
  <p>Show =>
    <%= link_to task.description, task_path(task) %>
  </p>
  <%= link_to 'Edit', edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
<% end %>


<p>
<%= link_to 'New', new_task_path %>
</p>


